include ../core/mixins/common
.fixed
  +bar
.background
.landing.landing-animation
  .header
    .navs 
      +bar('white')
      .text
        .title
          | New shell commands
        .descr
          | Joyable equivalents for existent linux commands
  .body
    .terminal-panel
      .demo-terminal(ng:class="terminalClass").animate
        .text(ng:style="style(demo)" 
              pipe="{{demo.body}}") 
        .cursor |
        .results
          .result(ng:repeat="result in demo.result track by $index")
            div(colored="{{result}}") 
  .bottom
    .install
      //.step-body
      //  .step 
      //    span 1. Download and Install 
      //    a(href="https://nodejs.org/") nodejs
      //.step-body
      //  .step 
      //    span 2. Open console and run
      .command npm install -g nixar
    .benefits
      .benefit(ng:repeat="benefit in benefits")
        .icon
          .icon-body(ng:class="{ animated: benefit.icon.length > 1 }")
            span(ng:repeat="icon in benefit.icon")
              i.fa(class="fa-{{icon}}" ng:if="!isSvg(icon)")
              object(type="image/svg+xml" data="images/{{icon}}.svg" ng:if="isSvg(icon)")
        .title {{benefit.title}}
        .desc {{benefit.desc}}
    .example-area
        .example-area-top
        .examples
          .header Most handy command combinations
          .example(ng:repeat="example in examples")
            .desc {{example.desc}}
            .body(pipe="{{example.body}}")
  .footer
    .row
       .title Checkout all commands
       md-button.md-raised.md-primary(ui-sref="docs") Docs
    .last(layout="row")
      .last-item.social(flex="")
        .buttons
          ul(ng-social-buttons='' 
             data-url="'http://nixar.work/'" 
             data-title="'Joyable equivalents for existent linux commands'"
             data-description="'test2'"
             data-image="'http://s3.mistinfo.com/32/d8/32d8eab76f4c242f665bda66b5edc6c5.jpg'")
            li.ng-social-github(user='askucher', repository='nixar') GitHub
            li.ng-social-github-forks(user='askucher', repository='nixar') Forks
            
      .last-item.copyright(flex="") 
        .text Copyright Â© 2015 Nixar. All rights reserved
      .last-item.logo(flex="") nixar
      
      